{
  "name": "Quiz-bot",
  "description": "Telegram Quiz Bot",
  "repository": "https://github.com/yourusername/telegram-quiz-bot",
  "logo": "https://your-logo-url.png",  // Replace with your logo URL
  "keywords": ["telegram", "quiz", "bot"],
  "scripts": {
    "postdeploy": "python Quizbot.py"
  },
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    },
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "MONGODB_URI": {
      "description": "Your MongoDB URI",
      "required": true
    }
  },
  "addons": [
    "heroku/python"
  ]
}
